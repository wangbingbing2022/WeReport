@import "../../../../../style/public/comm_box_list.wxss";
@import "../../../style/skin.wxss";

page {
	background-color: #F5F5F5;
}

.main {
	padding: 0rpx 0rpx 100rpx;
}

.up {
	width: 100%;
}

.up image {
	width: 100%;
	height: 350rpx;
	border-bottom-left-radius: 20rpx;
	border-bottom-right-radius: 20rpx;
}

.down {
	width: 100%;
	box-sizing: border-box;
	padding: 10rpx 30rpx;
	z-index: 9999;
}

.menu {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	background-color: #fff;
	padding: 20rpx 10rpx;
	margin-top: 10rpx;
	border-radius: 20rpx;
}

.menu .item {
	width: 25%;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 180rpx;

}

.menu .item .item-inner {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;

}

.menu .item-inner .img {
	padding: 16rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 25rpx;
}



.menu .item-inner .img image {
	width: 80rpx;
	height: 80rpx;
}

.menu .item-inner .title {
	margin-top: 0rpx;
	font-size: 28rpx;
	color: #000;
}

.home-list-box {
	width: 100%;
	margin-bottom: 200rpx;
	margin-top: 20rpx;
}

.home-list-box .comm-list-box {
	padding: 20rpx 0rpx 30rpx 0rpx;
	overflow: unset;
}

/*中部导图片航*/
.cute {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	margin-top: 30rpx;
}

.cute .item {
	width: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.cute .item:nth-child(odd) {
	padding: 0 10rpx 20rpx 0;
}


.cute .item:nth-child(even) {
	padding: 0 0rpx 20rpx 10rpx;
}


.cute .item image {
	width: 100%;
	height: 180rpx;
	border-radius: 12rpx;
}

.authen {
	width: 100%;
	margin-top: 10rpx;
	padding: 10rpx 10rpx;
}

.authen .inner {
	width: 100%;
	background-color: #f5eedf;
	color: #e9ab4e;
	padding: 18rpx 25rpx;
	border-radius: 20rpx;
}

.comm-list-box {
	padding: 20rpx 0rpx 30rpx 0rpx;
}