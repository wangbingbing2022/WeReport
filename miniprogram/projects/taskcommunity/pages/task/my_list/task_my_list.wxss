@import "../../../../../style/public/article_list.wxss";
@import "../../../style/skin.wxss";

.text-pic-list-box .item {
	padding: 20rpx  0rpx;
	position: relative;
	overflow: hidden;
} 
 

.btn.mid {
	padding: 0 30rpx;
}

.text-pic-list-box .item .author {
	font-size: 28rpx;
	color: #666;
	padding:0 30rpx;
}

.text-pic-list-box .item .title {
	position: relative;
	padding-right: 20rpx;
	border-bottom:1rpx solid #eee;
	padding-bottom: 20rpx;
	padding:10rpx 30rpx 20rpx 30rpx;
	font-size: 28rpx;
}

.text-pic-list-box .item .data {
	line-height: 1.5;
	font-size: 26rpx;
	color: #666;
	margin-top: 10rpx;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	padding:0 30rpx;
}

.text-time {
	color: #ccc;
}

.fixed-btn {
	position: fixed;
	bottom: 150rpx;
	left: 20rpx;
	background-color: var(--projectColor);
	color: #fff;
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	opacity: .8;
}

.fixed-btn .icon-add {
	font-size: 40rpx;
	font-weight: bold;
}